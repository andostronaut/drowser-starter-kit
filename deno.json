{
  "name": "@andostronaut/drowser-starter-kit",
  "version": "0.1.0",
  "importMap": "./import_map.json",
  "tasks": {
    "run:tests": "deno run -A src/tests.ts"
  },
  "lint": {
    "include": ["/"],
    "exclude": ["tests/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["/"],
    "exclude": ["tests/"]
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
